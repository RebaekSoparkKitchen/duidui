{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2017", "DOM"],
    "strict": false,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "scripts/**/*.ts",
    "src/**/*.ts",
    "node_modules/lodash-es/**/*.js"
  ]
}
